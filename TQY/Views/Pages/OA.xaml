<hc:Window x:Class="TQY.Views.Pages.OA"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:hc="https://handyorg.github.io/handycontrol"
           mc:Ignorable="d"
           Title="筑恒智 - OA系统" 
           Height="800" Width="1200"
           WindowState="Maximized" 
           WindowStartupLocation="CenterScreen"
           ShowTitle="True"
           ShowNonClientArea="True"
           Background="{DynamicResource RegionBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Effect="{StaticResource EffectShadow2}" Panel.ZIndex="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Border Background="{DynamicResource PrimaryBrush}" Width="32" Height="32" CornerRadius="6" Margin="0,0,10,0">
                        <TextBlock Text="智" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="筑恒智 OA" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Foreground="#333"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">

                    <TextBlock Text="管理员" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#666" FontSize="14"/>

                    <hc:Gravatar Id="admin@example.com" 
                                 Width="40" Height="40" 
                                 Style="{StaticResource GravatarCircle}" 
                                 Cursor="Hand"
                                 Background="{DynamicResource PrimaryBrush}">

                        <hc:Gravatar.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="用户信息" Icon="👤" Click="OnUserInfoClick"/>
                                <Separator/>
                                <MenuItem Header="退出登录" Icon="❌" Click="OnLogoutClick" Foreground="Red"/>
                            </ContextMenu>
                        </hc:Gravatar.ContextMenu>

                    </hc:Gravatar>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <hc:SimplePanel Grid.Column="0" Background="White" Margin="0,1,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListBox Grid.Row="0" 
                             ItemsSource="{Binding DataList}" 
                             SelectedItem="{Binding SelectedMenuItem}"
                             Background="Transparent"
                             BorderThickness="0"
                             Margin="10,20">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource ListBoxItemBaseStyle}">
                                <Setter Property="Margin" Value="0,4"/>
                                <Setter Property="Padding" Value="12,10"/>
                                <Setter Property="hc:BorderElement.CornerRadius" Value="8"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="💠" Margin="0,0,12,0" FontSize="14"/>
                                    <TextBlock Text="{Binding Name}" FontSize="15" FontWeight="Medium"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Grid.Row="1" Text="© 2025 Zjz Corp." FontSize="12" Foreground="#CCC" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                </Grid>
            </hc:SimplePanel>

            <Grid Grid.Column="1" Background="#F5F7FA">
                <hc:TransitioningContentControl Content="{Binding CurrentView}" Margin="20"/>
            </Grid>
        </Grid>

    </Grid>
</hc:Window>