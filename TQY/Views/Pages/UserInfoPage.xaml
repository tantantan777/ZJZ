<UserControl x:Class="TQY.Views.Pages.UserInfoPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             Background="Transparent">

    <hc:ScrollViewer>
        <StackPanel Margin="0,0,20,0">
            <Border Background="White" CornerRadius="10" Padding="30" Effect="{StaticResource EffectShadow2}" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <hc:Gravatar Id="admin@example.com" Width="80" Height="80" Style="{StaticResource GravatarCircle}"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="管" FontSize="24" FontWeight="Bold" Margin="0,0,10,0"/>
                            <hc:Tag Content="管理员"  VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="个性签名：筑恒基石，智领未来" Foreground="#999" Margin="0,8,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="2" Content="编辑资料"  Width="100"/>
                </Grid>
            </Border>

            <Border Background="White" CornerRadius="10" Padding="30" Effect="{StaticResource EffectShadow2}">
                <StackPanel>
                    <TextBlock Text="基本信息" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                    <hc:Row Gutter="20">
                        <hc:Col Span="12">
                            <hc:TextBox hc:InfoElement.Title="真实姓名" Text="管理员" IsReadOnly="True" Style="{StaticResource TextBoxExtend}"/>
                        </hc:Col>
                        <hc:Col Span="12">
                            <hc:TextBox hc:InfoElement.Title="工号" Text="ZJZ-001" IsReadOnly="True" Style="{StaticResource TextBoxExtend}"/>
                        </hc:Col>
                    </hc:Row>

                    <hc:Row Gutter="20" Margin="0,15,0,0">
                        <hc:Col Span="12">
                            <hc:TextBox hc:InfoElement.Title="所属部门" Text="技术部" IsReadOnly="True" Style="{StaticResource TextBoxExtend}"/>
                        </hc:Col>
                        <hc:Col Span="12">
                            <hc:TextBox hc:InfoElement.Title="职位头衔" Text="系统架构师" IsReadOnly="True" Style="{StaticResource TextBoxExtend}"/>
                        </hc:Col>
                    </hc:Row>

                    <hc:Row Gutter="20" Margin="0,15,0,0">
                        <hc:Col Span="12">
                            <hc:TextBox hc:InfoElement.Title="手机号码" Text="13800138000" IsReadOnly="True" Style="{StaticResource TextBoxExtend}"/>
                        </hc:Col>
                        <hc:Col Span="12">
                            <hc:TextBox hc:InfoElement.Title="电子邮箱" Text="admin@example.com" IsReadOnly="True" Style="{StaticResource TextBoxExtend}"/>
                        </hc:Col>
                    </hc:Row>

                    <hc:Row Gutter="20" Margin="0,15,0,0">
                        <hc:Col Span="12">
                            <hc:TextBox hc:InfoElement.Title="入职日期" 
                                        Text="2020-01-01" 
                                        IsReadOnly="True" 
                                        Style="{StaticResource TextBoxExtend}"/>
                        </hc:Col>
                        <hc:Col Span="12">
                            <hc:TextBox hc:InfoElement.Title="家庭地址" Text="北京市朝阳区..." IsReadOnly="True" Style="{StaticResource TextBoxExtend}"/>
                        </hc:Col>
                    </hc:Row>

                    <hc:TextBox hc:InfoElement.Title="备注" Text="系统超级管理员账号" Margin="0,15,0,0" IsReadOnly="True" Style="{StaticResource TextBoxExtend}"/>

                </StackPanel>
            </Border>
        </StackPanel>
    </hc:ScrollViewer>
</UserControl>