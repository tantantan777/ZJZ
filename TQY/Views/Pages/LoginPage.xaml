<Page x:Class="TQY.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      mc:Ignorable="d"
      Background="Transparent">

    <Grid>
        <!-- 登录卡片 -->
        <Border Width="500"
                Padding="28"
                Style="{StaticResource BorderRegion}"
                CornerRadius="12"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" BorderBrush="{x:Null}">

            <StackPanel>

                <!-- 标题 -->
                <TextBlock Text="请登录筑恒智OA系统平台"
                           Style="{StaticResource TextBlockTitleBold}"
                           HorizontalAlignment="Center"/>
                
                <!-- 副标题 -->
                <TextBlock Text="Digital Construction Project Lifecycle Management Platform"
                           Style="{StaticResource TextBlockDefault}"
                           Foreground="{StaticResource SecondaryTextBrush}" 
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,6,0,20"/>

                <!-- 电子邮箱 -->
                <hc:TextBox hc:InfoElement.Title="电子邮箱"
                            hc:InfoElement.Placeholder="请输入你的电子邮箱"
                            Margin="0,50,0,15"
                            Height="60"
                            Style="{StaticResource TextBoxExtend}"/>

                <!-- 密码 -->
                <hc:PasswordBox
                             hc:TitleElement.Title="密码"
                             hc:PasswordBoxAttach.PasswordLength="0"
                             hc:InfoElement.Placeholder="请输入密码"
                             hc:PasswordBox.ShowEyeButton="True"
                             hc:PasswordBox.ShowPassword="False"
                             Height="60"
                             hc:TitleElement.TitlePlacement="Top"
                             VerticalAlignment="Center" />

                <!-- 选项 -->
                <hc:Row Margin="0,10,0,14" VerticalAlignment="Center">
                    <hc:Col Span="12">
                        <CheckBox Content="记住我" 
                                  Style="{StaticResource CheckBoxBaseStyle}"/>
                    </hc:Col>

                    <hc:Col Span="12" HorizontalAlignment="Right">
                        <Button Content="忘记密码？" 
                                Click="OnForgotPassword"
                                Style="{StaticResource ButtonDefault}" 
                                Foreground="{DynamicResource PrimaryBrush}" 
                                BorderBrush="{x:Null}"/>
                    </hc:Col>
                </hc:Row>

                <!-- 登录按钮 -->
                <Button Content="登 录"
                        Margin="0,10,0,0"
                        Width="370"
                        Height="40"
                        Style="{StaticResource ButtonDefault}"/>

                <!-- 注册 -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0">

                    <TextBlock Text="没有账号？"
                               Style="{StaticResource TextBlockDefault}"
                               FontSize="12"
                               VerticalAlignment="Center"/>

                    <Button Content="点击注册"
                            Style="{StaticResource ButtonDefault}" 
                            Foreground="{DynamicResource PrimaryBrush}" 
                            BorderBrush="{x:Null}"
                            Click="OnRegister"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
